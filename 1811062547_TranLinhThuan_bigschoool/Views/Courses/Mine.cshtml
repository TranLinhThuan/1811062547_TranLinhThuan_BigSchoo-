@model IEnumerable<_1811062547_TranLinhThuan_bigschoool.Models.Course>
@{ ViewBag.Title = "Mine";
                Layout = "~/Views/Shared/_Layout.cshtml"; }
<h2>Mine</h2>
<div class="row">
    <ul class="course" style="margin-top: 30px">
        @foreach (var course in Model)
        {
            <li>
                <div class="date">
                    <div class="month">
                        @course.DateTime.ToString("MM")
                    </div>
                    <div class="day">
                        @course.DateTime.ToString("dd")
                    </div>
                </div>
                <div class="details">
                    <span class="lecturer">
                        @course.Lecturer.Name
                    </span>
                    <span class="category">
                        @course.Category.Name
                    </span>
                </div>
                <div class="action">
                    @if (course.IsCanceled == false)
                    {
                        <a href="@Url.Action("Edit", "Courses", new { id = course.Id })">Edit|</a>
                        <a href="#" class="js-cancel-course" data-course-id="@course.Id">Cancel</a>
                    }
                    else
                    {
                        <span class="label label-warning">Canceled</span>
                    }
                </div>
            </li>
        }
    </ul>
 
    @section scripts
    { 
        <script> 
            $(document).ready(function () {
                $(".js-cancel-course").click(function (e) {
                    e.preventDefault();
                    var link = $(e.target);
                    bootbox.confirm({
                        title: "Cancel Course?",
                        message: "Are you sure to cancel?",
                        buttons: {
                            cancel: {
                                label: '<i class = "fa fa-times"></i> Cancel'
                            },
                            confirm: {
                                label: '<i class = "fa fa-check"></i> Confirm'
                            }
                        },
                        callback: function (result) {
                            if (result) {
                                $.ajax({
                                    url: "/api/courses/" + link.attr("data-course-id"),
                                    method: "DELETE"
                                })
                                    .done(function () {
                                        link.parent("li").fadeOut(function () {
                                            $(this).remove();
                                        });
                                    })
                                    .fail(function () {
                                        alert("Something failed!");
                                    });
                            }
                        }
                    });
                });
            });
        </script>
    }
</div>